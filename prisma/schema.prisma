// database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 4
}

model User {
  id               String   @id @default(uuid())
  fullname         String?
  country          String?
  invite           String?
  trader           String?
  phone            String?  @unique
  email            String?  @unique
  username         String   @unique
  wallet           Wallet?
  membership       Membership?
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
}

model Wallet {
  id               String   @id @default(uuid())
  username         String   @unique
  user             User     @relation(fields: [username], references: [username])
  binance_token    String?  @unique
  binance_secret   String?  @unique
  deriv_api        String?  @unique
  id_access        String?  @unique
  encrypted_pass   String?
  password         String?
}

model Forex  {

  username         String
  userForex        String     @unique
  server           String
  password         String
  trader           String
  identifiership   String     @unique
  user             Membership @relation(fields: [username], references: [username])
  created_at       DateTime   @default(now())
  updated_at       DateTime   @updatedAt
}

model Membership  {
  active            Boolean? @default(false)
  txnLink           String?
  username          String   @unique
  freeForex         Int?     @default(1)
  accountsForex     Forex[]
  identifiership    String?  @unique
  tmp               String   @unique
  user              User     @relation(fields: [username], references: [username])
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
}
